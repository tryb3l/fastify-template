{
  "type": "object",
  "$id": "schema:user",
  "additionalProperties": false,
  "properties": {
    "id": {
      "type": "string",
      "format": "uuid",
      "readOnly": true
    },
    "createdAt": {
      "type": "string",
      "format": "date-time",
      "readOnly": true
    },
    "modifiedAt": {
      "type": "string",
      "format": "date-time",
      "readOnly": true
    },
    "username": { "$ref": "schema:auth:username#" },
    "email": { "$ref": "schema:auth:email#" },
    "password": { "$ref": "schema:auth:password#" },
    "firstName": { "$ref": "schema:auth:firstname#" },
    "lastName": { "$ref": "schema:auth:lastname#" }
  }
}
