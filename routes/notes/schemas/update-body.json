{
  "type": "object",
  "$id": "schema:note:update:body",
  "additionalProperties": false,
  "required": ["id"],
  "properties": {
    "id": {
      "type": "string"
    },
    "status": {
      "type": "string",
      "enum": ["active", "archived"]
    },
    "title": {
      "type": "string",
      "minLength": 1,
      "maxLength": 100
    },
    "body": {
      "type": "string",
      "minLength": 1,
      "maxLength": 10000
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1,
        "maxLength": 10
      }
    }
  }
}
