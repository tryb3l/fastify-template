{
  "type": "object",
  "$id": "schema:note",
  "additionalProperties": false,
  "properties": {
    "_id": {
      "type": "string"
    },
    "id": {
      "type": "string"
    },
    "title": {
      "type": "string",
      "minLength": 1,
      "maxLength": 100
    },
    "body": {
      "type": "string",
      "minLength": 1,
      "maxLength": 10000
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1,
        "maxLength": 10
      }
    },
    "createdAt": {
      "type": "string",
      "format": "date-time"
    },
    "modifiedAt": {
      "type": "string",
      "format": "date-time"
    },
    "status": {
      "type": "string",
      "enum": ["active", "archived"]
    }
  }
}
